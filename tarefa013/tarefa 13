
let salario = parseFloat(prompt("Digite o sal치rio do funcion치rio (em MT):"));
let aumento = salario * 0.15;
let novoSalario = salario + aumento;

alert(
  "Sal치rio atual: " + salario.toFixed(2) + " MT\n" +
  "Aumento de 15%: " + aumento.toFixed(2) + " MT\n" +
  "Novo sal치rio: " + novoSalario.toFixed(2) + " MT"
);